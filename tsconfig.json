{
  "compilerOptions": {
    "target": "ES2022",
  "module": "NodeNext",
  "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  "lib": ["ES2023", "DOM"],
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "types": ["node", "jest"]
  },
  "include": ["src"]
}
